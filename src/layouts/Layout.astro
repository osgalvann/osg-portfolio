---
import Header from "../components/header/Header.astro";
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      defer
      src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"
    ></script>
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.fog.min.js"
    ></script>
    <script type="module">
      const vantaObj = {
        el: "html",
        mouseControls: true,
        touchControls: true,
        gyroControls: false,
        minHeight: 1000.0,
        minWidth: 200.0,
        highlightColor: 0x3091f2,
        midtoneColor: 0xf5932e,
        lowlightColor: 0xabd942,
        baseColor: 0x0,
        blurFactor: 0.9,
        speed: 1.9,
        zoom: 0.5,
      };

      VANTA.FOG(vantaObj);
    </script>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Oscar Galvan</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
